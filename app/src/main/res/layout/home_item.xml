<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    android:layout_height="140dp">
<androidx.cardview.widget.CardView
    android:translationZ="-20dp"
     android:backgroundTint="@color/itemBgColor"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="24dp"
    app:cardCornerRadius="8dp"
    android:layout_width="90dp"
    android:layout_height="0dp">

</androidx.cardview.widget.CardView>

    <ImageView

        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/foodImage"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:src="@drawable/chineesefood"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

   <TextView
       android:fontFamily="@font/poppinsmedium"
       android:layout_margin="4dp"
       android:textSize="11sp"
       android:textColor="@color/textColor"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Egg Pasta"
       app:layout_constraintTop_toBottomOf="@id/foodImage"
       android:gravity="center"
       android:id="@+id/foodTitle"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:fontFamily="@font/poppinsregular"
        android:layout_margin="4dp"
        android:textColor="@color/subTextColor"
        android:textSize="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spicy chicken pasta"
        app:layout_constraintTop_toBottomOf="@id/foodTitle"
        android:gravity="center"
        android:id="@+id/foodDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:fontFamily="@font/poppinsregular"
        android:layout_margin="4dp"
        android:drawableStart="@drawable/caloryfire"
        android:textColor="@color/calorieTextColor"
        android:textSize="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingEnd="15dp"
        android:paddingStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="78 Calories"
        app:layout_constraintTop_toBottomOf="@id/foodDesc"
        android:id="@+id/foodCalory"
        app:layout_constraintStart_toStartOf="parent"
         />
    <TextView
        android:fontFamily="@font/poppinsmedium"
        android:layout_margin="4dp"
        android:textColor="@color/subTextColor"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 9.80"
        app:layout_constraintTop_toBottomOf="@id/foodCalory"
        android:gravity="center"
        android:id="@+id/foodPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>